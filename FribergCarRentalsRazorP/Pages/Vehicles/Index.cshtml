@page
@model FribergCarRentalsRazorP.Pages.Vehicles.IndexModel

@{
    ViewData["Title"] = "Index";
}
<nav></nav>
<main>
    <section>
        <h1>Vehcile list</h1>
	</section>
    <table>	
        <tr>
		    <th>
			    @Html.DisplayNameFor(model => model.Vehicles.ElementAt(0).VehiclePicture)
		    </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles.ElementAt(0).Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles.ElementAt(0).Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles.ElementAt(0).ModelYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles.ElementAt(0).Price)
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model.Vehicles) {
            <tr>
			    <td>
                   <img style="width:10vmax;" src="@Html.DisplayFor(modelItem => item.VehiclePicture)" />
			    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    <a class="btn btn--standard box-shadow" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn--standard box-shadow" asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn--negativ box-shadow" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
	</table>   
    <div class="container">
		<a class="btn btn--positiv box-shadow" asp-page="Create">Create New</a>
	</div>
</main>