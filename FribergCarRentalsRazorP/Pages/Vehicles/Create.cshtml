@page
@model FribergCarRentalsRazorP.Pages.Vehicles.CreateModel

@{
    ViewData["Title"] = "Create";
}
<nav></nav>
<main>
    <section>
        <h1>New vehicle</h1>
    </section>
    <section>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="form-group container--column">
                    <label asp-for="Vehicle.Make" class="control-label"></label>
                    <br />
				    <label asp-for="Vehicle.Model" class="control-label"></label>
                    <br />
				    <label asp-for="Vehicle.ModelYear" class="control-label"></label>
                    <br />
				    <label asp-for="Vehicle.Price" class="control-label"></label>
                    <br />
				    <label asp-for="Vehicle.VehiclePicture" class="control-label"></label>
                </div>
                <div class="form-group container--column">
				    <input asp-for="Vehicle.Make" class="form-control"/>
				    <span asp-validation-for="Vehicle.Make" class="text-danger"></span>
                    <br />
                    <input asp-for="Vehicle.Model" class="form-control"/>
                    <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
                    <br />
				    <input asp-for="Vehicle.ModelYear" class="form-control"/>
				    <span asp-validation-for="Vehicle.ModelYear" class="text-danger"></span>
                    <br />
				    <input asp-for="Vehicle.Price" class="form-control"/>
				    <span asp-validation-for="Vehicle.Price" class="text-danger"></span>
                    <br />
				    <input asp-for="Vehicle.VehiclePicture" class="form-control"/>
				    <span asp-validation-for="Vehicle.VehiclePicture" class="text-danger"></span>
                </div> 
            </div>
            <div class="form-group">
				<input class="btn btn--positiv box-shadow" type="submit" value="Create" />
                <a class="btn btn--standard box-shadow" asp-page="Index">Back to List</a>
            </div>
        </form>
    </section>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
