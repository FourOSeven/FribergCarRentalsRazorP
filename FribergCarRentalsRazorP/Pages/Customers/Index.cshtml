@page
@model FribergCarRentalsRazorP.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<nav></nav>
<main>
    <section>
        <h1>Customer list</h1>

    </section>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers.ElementAt(0).FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.ElementAt(0).LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.ElementAt(0).Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.ElementAt(0).Password)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Customers) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>   
                    <a class="btn btn--positiv box-shadow" asp-page="/Bookings/IndexVehicleBooking" asp-route-Id="@item.Id">New Booking</a>
                    <a class="btn btn--standard box-shadow" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn--standard box-shadow" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn--negativ box-shadow" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
    <div class="container">
        <a class="btn btn--positiv box-shadow" asp-page="Create">Create New</a>
    </div>
</main>
