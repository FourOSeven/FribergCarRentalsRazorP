@page
@model FribergCarRentalsRazorP.Pages.Customers.LoginModel

@{
    ViewData["Title"] = "Login";
}
<nav></nav>
<main>
    <section>
		<h1>Login</h1>
	</section>
    <section>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Customer.Id" />
                <input type="hidden" asp-for="Customer.FirstName" class="form-control" />
                <input type="hidden" asp-for="Customer.LastName" class="form-control" />
            </div>
            <div>
				@if (ViewData["NotLoggedIn"] != null)
				{
					<div class="text-danger">
						@ViewData["NotLoggedIn"]
					</div>
				}
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="text-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }
			</div> 
            <div class="container" >
                <div class="form-group container--column">
                    <label asp-for="Customer.Email" ></label>
                    <br />
				    <label asp-for="Customer.Password" class="control-label"></label>
                </div>
                <div class="form-group container--column">              
				    <input type="email" asp-for="Customer.Email" class="form-control" />
			        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    <br />
                    <input type="password" asp-for="Customer.Password" class="form-control" />               
                    <span asp-validation-for="Customer.Password" class="text-danger"></span>
                </div>
			</div>
            <div class="form-group container">       
                     <input class="btn btn--positiv box-shadow" type="submit" value="Login" />
                     <a class="btn btn--standard box-shadow" asp-page="Create">Create New</a></>
            </div>
        </form>
    </section>
<div class="container">
    <a class="btn btn--negativ box-shadow" asp-page="/Index">Back to main screen</a>
</div>

</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
