@page
@model FribergCarRentalsRazorP.Pages.Customers.LoginModel

@{
    ViewData["Title"] = "Login";
}
<section>
<h1>Customer Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="Customer.FirstName" class="form-control" />
            <input type="hidden" asp-for="Customer.LastName" class="form-control" />
            </div>
            <div>
				@if (ViewData["NotLoggedIn"] != null)
				{
					<div class="text-danger">
						@ViewData["NotLoggedIn"]
					</div>
				}
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="text-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }
				</div>        
            <div class="form-group">

                <label asp-for="Customer.Email" class=""></label>
                <input type="email" asp-for="Customer.Email" class="form-control" />
                <br />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input type="password" asp-for="Customer.Password" class="form-control" />
                <br />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn--standard" />
                <a class="btn btn--standard" asp-page="Create">Create New</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-page="/Index">Back to main screen</a>
</div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
