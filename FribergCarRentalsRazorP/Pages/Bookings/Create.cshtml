            <div class="form-group">
                <input type="hidden" asp-for="Booking.Vehicle.Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Booking.Vehicle.Make" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Booking.Vehicle.Model" class="form-control" />    
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Booking.Vehicle.ModelYear" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Booking.Vehicle.Price" class="form-control" />
            </div>
            <div class="form-group">
